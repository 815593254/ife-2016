table
  border-spacing: 0;
  border-collapse: collapse
  background-color: transparent
  font-weight: bold
  font-size: 16px
  &.chessboard-bg
    text-align: center

    tr
      td
        width: 50px
        height: 50px
        border-bottom: 1px solid #ddd
        border-right: 1px solid #ddd
        &:first-child
          border-bottom: none
          border-right: 2px solid #555
        &:last-child
          border-right: 2px solid #555
      &:first-child
        td
          border-bottom: 2px solid #555
          border-right: none
          &:first-child
            border-bottom: none
      &:last-child
        td
          border-bottom: 2px solid #555
          &:first-child
            border-bottom: none

// 棋子用 Border 来设置对应的方向
#chess
  background-color: #f00
  position: relative
  width: 50px
  height: 50px
  &.left
    border-left: 15px solid #00f
  &.right
    border-right: 15px solid #00f
  &.bottom
    border-bottom: 15px solid #00f
  &.top
    border-top: 15px solid #00f

border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

.control-area
  margin-left: 50px
  input
    font-size: 16px
    margin: 5px